extends base.pug

block scripts
  script(src='/static/index.js')

block style
    style
      include ../static/style.css
      include ../static/contact.css

block content
    div.container
        h1  Contact Us
        form(action="/contact" method="post", class="contactForm") 
            input(type="text", class="contactInput", name="name" placeholder="Enter your Name")
            input(type="phone", class="contactInput", name="phone" placeholder="Enter your Phone number")
            input(type="email", class="contactInput", name="email" placeholder="Enter your Email Id")
            input(type="text", class="contactInput", name="address" placeholder="Enter your Address")
            input(type="text", class="contactInput", name="description" placeholder="Enter your Concern")
            button(class="btn")
                | Submit